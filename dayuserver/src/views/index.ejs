<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
        <title>提醒设置</title>
        <!-- 引入 WeUI -->
        
        <link rel="stylesheet" href="./stylesheets/weui.css"/>
        <script src="https://res.wx.qq.com/open/libs/weuijs/1.2.1/weui.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script></script>
    </head>
    <body>
           
                <div class="page">
                        <div class="weui-cells__title">表单报错</div>
                    <div class="page__hd">
                        <h1 class="page__title">Picker</h1>
                        <p class="page__desc" id="datep">多列选择器，需要配合js实现</p>
                    </div>
                    <div class="page__bd page__bd_spacing">
                        <a href="javascript:;" class="weui-btn weui-btn_default" id="showDatePicker">日期选择器</a>
                    </div>
                </div>
                <script type="text/javascript">
                    $('#showDatePicker').on('click', function () {
                        weui.datePicker({
                            start: 1990,
                            end: new Date().getFullYear() + 10,
                            onChange: function (result) {
                                console.log(result);
                            },
                            onConfirm: function (result) {
                                $('#datep').html(result[0].value + ' - ' + result[1].value + ' - ' + result[2].value)
                                console.log(result);
                            },
                            title: '多列选择器'
                        });
                    });
                </script>
    </body>
</html>
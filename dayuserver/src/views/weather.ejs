<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
            <meta
                name="viewport"
                content="width=device-width,initial-scale=1,user-scalable=0">
                <title>
                    <%- title %>
                    </title>
                    <link
                        rel="stylesheet"
                        href="https://cdn.bootcss.com/weui/1.1.3/style/weui.min.css">
                        <link
                            rel="stylesheet"
                            href="https://cdn.bootcss.com/jquery-weui/1.2.1/css/jquery-weui.min.css">
                            <link rel="stylesheet" href="../stylesheets/createtip.css">
                                <meta charset="utf-8"></head>
                                <body>
                                    <iframe
                                        scrolling="no"
                                        src="https://tianqiapi.com/api.php?style=tw&skin=peach&city=涿州&align=center&paddingtop=0&paddingleft=0"
                                        frameborder="0"
                                        width="100%"
                                        height="380"
                                        allowtransparency="true"
                                        margin="100px"></iframe>

                                    <div style="top:380px; width: 100%;height: 120px;">
                                        <div class="weui-flex">
                                            <div class="weui-flex__item">今日限行</div>
                                        </div>
                                        <h1 id="forbiddenNum" style="text-align: center;font-size:72px;color: red"></h1>
                                    </div>
                                    <div
                                        style="bottom: 0px; width: 100%;height: 50px;position: fixed;align-content: center; background: #5c5b5b93">

                                        <div class="weui-flex" style="align-content:center; margin-top: 10px;">
                                            <div class="weui-flex__item" style="margin-left: 20px;">关注涿州车友,获取每日天气限行推送</div>
                                            <div class="weui-cell__hd">
                                                <a
                                                    href="https://mp.weixin.qq.com/mp/profile_ext?action=home&__biz=MzA4OTg0MzYxMA==#wechat_redirect"
                                                    class="weui-btn weui-btn_mini weui-btn_primary"
                                                    style="margin-right: 20px">关注</a>
                                            </div>
                                        </div>

                                    </div>

                                    <!-- body 最后 -->
                                    <script src="http://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
                                    <script src="https://cdn.bootcss.com/jquery/1.11.0/jquery.min.js"></script>
                                    <script src="https://cdn.bootcss.com/jquery-weui/1.2.1/js/jquery-weui.min.js"></script>

                                    <!-- 如果使用了某些拓展插件还需要额外的JS -->
                                    <script src="https://cdn.bootcss.com/jquery-weui/1.2.1/js/swiper.min.js"></script>
                                    <script src="https://cdn.bootcss.com/jquery-weui/1.2.1/js/city-picker.min.js"></script>
                                    <script src="https://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
                                    <script>
                                        $.toptip('点击右上角,分享更多朋友', 'success');
                                        var forbiddenNums = [
                                            '今日不限行',
                                            '3 和 8',
                                            '4 和 9',
                                            '5 和 0',
                                            '1 和 6',
                                            '2 和 7',
                                            '今日不限行'
                                        ]

                                        var currentdate = new Date()
                                        var week = currentdate.getDay()
                                        var forbiddenStr = '今日不限行' //forbiddenNums[week]
                                        $('#forbiddenNum').html(forbiddenStr)
                                        var burl = encodeURI(location.href.split('#')[0]);
                                        $.ajax({
                                            type: "get", url: "./jsSign", //"http://www.bl1000.cn/wx/jsSign",
                                            data: {
                                                url: burl
                                            },
                                            success: (result) => {
                                                console.log('sign == ' + JSON.stringify(result))

                                                wx.config({
                                                    debug: false,
                                                    appId: 'wxf5a4243b7b09ffc0',
                                                    timestamp: "" + result.timestamp,
                                                    nonceStr: result.nonceStr,
                                                    signature: result.signature,
                                                    jsApiList: ['onMenuShareTimeline', 'onMenuShareAppMessage', 'onMenuShareQQ', 'onMenuShareWeibo', 'onMenuShareQZone']
                                                })

                                                wx.ready(function () {

                                                    // 分享给好友
                                                    wx.onMenuShareAppMessage({
                                                        title: '涿州限行提醒', // 分享标题
                                                        desc: '关注公众号获取每日涿州限行及天气推送', // 分享描述
                                                        link: 'http://www.bl1000.cn/wx/weather', //'http://www.bl1000.cn/wx/share',  分享链接
                                                        imgUrl: 'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1565000845' +
                                                                '672&di=aa59f958e0f75e5d742fd9ce5a3c91a5&imgtype=0&src=http%3A%2F%2Fupload.mnw.' +
                                                                'cn%2F2017%2F0214%2F1487058092675.jpg', // 分享图标
                                                        type: 'link',
                                                        success: function () {
                                                            //doShareDone()
                                                        },
                                                        cancel: function () {
                                                            //doShareCancel()
                                                        }
                                                    })
                                                    // 分享到朋友圈
                                                    wx.onMenuShareTimeline({
                                                        title: '涿州限行提醒', // 分享标题
                                                        desc: '关注公众号获取每日涿州限行及天气推送',
                                                        link: 'http://www.bl1000.cn/wx/weather', //burl,//'http://www.bl1000.cn/wx/share',  分享链接
                                                        imgUrl: 'https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1565000845' +
                                                                '672&di=aa59f958e0f75e5d742fd9ce5a3c91a5&imgtype=0&src=http%3A%2F%2Fupload.mnw.' +
                                                                'cn%2F2017%2F0214%2F1487058092675.jpg', // 分享图标
                                                        success: function () {
                                                            //doShareDone()
                                                        },
                                                        cancel: function () {
                                                            //doShareCancel()
                                                        }
                                                    })
                                                });

                                            }
                                        })
                                    </script>
                                </body>
                            </html>